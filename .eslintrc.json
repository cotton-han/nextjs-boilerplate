{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": ["next/core-web-vitals", "plugin:prettier/recommended", "plugin:import/recommended", "plugin:import/typescript"],
  "rules": {
    "import/order": [
      "error",
      {
        "newlines-between": "always",
        "groups": [["builtin", "external"], "internal", ["parent", "sibling", "index"], "type"],
        "alphabetize": { "order": "asc", "caseInsensitive": true }
      }
    ]
  },
  "ignorePatterns": ["node_modules/", ".next/"]
}
